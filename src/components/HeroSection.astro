---
/* Hero-sektion med statisk billede og interaktiv video */
---
<section class="relative grid min-h-screen w-full md:grid-cols-2">

  <!-- Venstre kolonne: billede (vises nederst på mobil via order) -->
  <div class="relative h-screen w-full order-2 md:order-1">
    <img src="/billeder/hero.png" alt="Hero image" class="h-full w-full object-cover" />

    <!-- Mobil: tekst overlayes billedet for at spare plads -->
    <div class="pointer-events-none absolute inset-0 flex items-center justify-center px-6 text-center md:hidden z-20">
      <h1 class="h2 max-w-3xl text-[var(--color-black)]">
        An online platform that supports mental health through organic thinking
      </h1>
    </div>
  </div>

  <!-- Højre kolonne: video (interaktiv) -->
  <div class="relative h-screen w-full bg-white order-1 md:order-2 md:border-l md:border-[var(--color-beige)]">
    <!-- Video autoplayes, men kan pauses via klik eller tastatur -->
    <video
      id="heroVideo"
      src="/billeder/hero.mp4"
      class="h-full w-full object-cover cursor-pointer"
      autoplay
      muted
      loop
      playsinline
      tabindex="0"
      aria-label="Hero video - tryk for at pause/afspille">
    </video>

    <!-- Pause-ikon vises kun når videoen er pauset -->
    <div
      id="heroPauseIcon"
      class="absolute inset-0 z-10 hidden flex items-center justify-center pointer-events-none">
      <img src="/billeder/pause.png" alt="Paused" class="w-20 h-20 object-contain" />
    </div>
  </div>

  <!-- Desktop: fælles overskrift overlayes begge kolonner (skjult på mobil) -->
  <div class="pointer-events-none absolute inset-0 hidden md:flex items-center justify-center px-6 text-center z-20">
    <h1 class="h2 max-w-3xl text-[var(--color-black)] md:h1">
      An online platform that supports mental health through organic thinking
    </h1>
  </div>

  <script type="module">
    // Finder video-elementet én gang
    const video = document.getElementById('heroVideo');
    if (!video) return;

    const pauseIcon = document.getElementById('heroPauseIcon');

    // Skifter mellem play og pause
    function togglePlayback() {
      if (video.paused) video.play();
      else video.pause();
    }

    // Synkroniserer pause-ikon med videoens tilstand
    function updatePauseIcon() {
      if (!pauseIcon) return;
      pauseIcon.classList.toggle('hidden', !video.paused);
    }

    // Klik understøtter pause/play
    video.addEventListener('click', () => {
      togglePlayback();
      updatePauseIcon();
    });

    // Tastatur (Space / Enter) for tilgængelighed
    video.addEventListener('keydown', (e) => {
      if (e.key === ' ' || e.key === 'Spacebar' || e.key === 'Enter') {
        e.preventDefault();
        togglePlayback();
        updatePauseIcon();
      }
    });

    // Holder ikon opdateret ved eksterne play/pause events
    video.addEventListener('play', updatePauseIcon);
    video.addEventListener('pause', updatePauseIcon);

    // Initial tilstand
    updatePauseIcon();
  </script>

</section>
