---
const {
  title = '',
  paragraphs = [],
  image = '/billeder/hero.png',
  imageAlt = '',
  imagePosition = 'right', // 'left' or 'right'
  showImageMobile = false,
  ctaText = 'Read more',
  ctaHref = '/',
} = Astro.props;
---

<section class="grid min-h-screen w-full border-[0.5px] border-[var(--color-dark-grey)] md:grid-cols-2">
  {imagePosition === 'left' && (
    <div class="relative hidden h-screen w-full md:block">
      <img src={image} alt={imageAlt || title} class="h-full w-full object-cover" />
    </div>
  )}

  <!-- Text -->
  <div class="flex items-center bg-white">
    <div class="w-full px-[100px] py-20">
      <h2 class="h2 mb-[50px] text-center">{title}</h2>

      {showImageMobile && (
        <img src={image} alt={imageAlt || title} class="mx-auto mb-8 w-[320px] object-cover md:hidden" />
      )}

      {paragraphs[0] && <p class="body-text mb-6 max-w-2xl">{paragraphs[0]}</p>}
      {paragraphs[1] && <p class="body-text mb-6 max-w-2xl">{paragraphs[1]}</p>}
      {paragraphs[2] && <p class="body-text hidden max-w-2xl md:block">{paragraphs[2]}</p>}

      <div class="mt-6 flex justify-center">
        <a href={ctaHref} class="body-text inline-block underline">{ctaText}</a>
      </div>
    </div>
  </div>

  {imagePosition === 'right' && (
    <div class="relative hidden h-screen w-full md:block">
      <img src={image} alt={imageAlt || title} class="h-full w-full object-cover" />
    </div>
  )}
</section>
