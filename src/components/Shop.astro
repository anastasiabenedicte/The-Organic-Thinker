---
const {
  image = "/billeder/activity.png",
  title = "Hibiscus",
  price = 10,
  currency = "â‚¬",
  tags = ["Organic", "Vegan", "Non-GMO"],
} = Astro.props;
import Button from './Button.astro';
---

<article class="mx-auto w-72 md:w-80 group">
  <div class="bg-white">
    <!-- Image container -->
    <div class="relative flex h-[388px] w-72 items-center justify-center bg-[var(--color-beige)] md:h-[420px] md:w-80">
      <img
        src={image}
        alt={title}
        class="max-w-[46%] object-contain shadow-sm md:max-w-[50%]"
      />

      <!-- CTA: visible on mobile, appears on hover for desktop -->
      <div class="absolute left-4 right-4 bottom-4 md:bottom-6">
        <Button
          text="Add to Cart"
          class={`!bg-black !text-white w-full rounded-[999px] px-6 py-3 md:rounded-[30px] opacity-100 md:opacity-0 md:group-hover:opacity-100 transition-opacity duration-150 ${''}`}
        />
      </div>
    </div>

    <!-- Product info -->
    <div class="mt-6">
      <h3 class="text-lg font-medium text-[var(--color-black)] md:text-xl">
        {title}
      </h3>

      <p class="body-text mt-3 font-semibold text-[var(--color-black)]">
        {currency} {price}
      </p>

      <!-- Tags -->
      <ul class="mt-4 flex flex-wrap gap-3">
        {tags.map((tag) => (
          <li>
            <span class="inline-flex items-center rounded-full border border-gray-300 bg-white px-3 py-1 text-sm text-[var(--color-black)]">
              {tag}
            </span>
          </li>
        ))}
      </ul>
    </div>
  </div>
</article>
