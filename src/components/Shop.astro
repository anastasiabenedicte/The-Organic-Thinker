---
const {
  image = "/billeder/activity.png",
  title = "Hibiscus",
  price = 10,
  currency = "â‚¬",
  tags = ["Organic", "Vegan", "Non-GMO"],
} = Astro.props;
---

<article class="mx-auto w-72 md:w-80">
  <div class="bg-white">
    <!-- Image container -->
    <div class="flex h-[388px] w-72 items-center justify-center bg-[var(--color-beige)] md:h-[420px] md:w-80">
      <img
        src={image}
        alt={title}
        class="max-w-[46%] object-contain shadow-sm md:max-w-[50%]"
      />
    </div>

    <!-- Product info -->
    <div class="mt-6">
      <h3 class="text-lg font-medium text-[var(--color-black)] md:text-xl">
        {title}
      </h3>

      <p class="mt-3 text-lg font-semibold text-[var(--color-black)]">
        {currency} {price}
      </p>

      <!-- Tags -->
      <ul class="mt-4 flex flex-wrap gap-3">
        {tags.map((tag) => (
          <li>
            <span class="inline-flex items-center rounded-full border border-gray-300 bg-white px-3 py-1 text-sm text-[var(--color-black)]">
              {tag}
            </span>
          </li>
        ))}
      </ul>
    </div>
  </div>
</article>
