---
import MainLayout from "../layouts/MainLayout.astro";
import TwoColSection from "../components/TwoColSection.astro";

/* Sektioner er opdelt i selvstændige komponenter */
import HeroSection from "../components/HeroSection.astro";
import CardsSection from "../components/CardsSection.astro";
import ShopSection from "../components/ShopSection.astro";
---

<MainLayout title="Titel">
  <!-- Forhindrer horisontal scroll fra animationer -->
  <div class="overflow-x-hidden">

    <HeroSection />

    <!-- Infografik med tre faste værdipunkter -->
    <section class="w-full bg-white">
      <div class="mx-auto max-w-5xl px-6 py-12">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">

          <div class="flex flex-col items-center text-center">
            <div class="bg-[var(--color-beige)] rounded-full w-16 h-16 flex items-center justify-center mb-4">
              <img src="/billeder/book.svg" alt="Holistic knowledge" class="w-7 h-7 object-contain" />
            </div>
            <h4 class="body-text font-medium mb-2">Holistic knowledge</h4>
            <p class="body-text text-sm text-gray-600 max-w-xs">
              Insights and simple practices that support mental clarity and balance.
            </p>
          </div>

          <div class="flex flex-col items-center text-center">
            <div class="bg-[var(--color-beige)] rounded-full w-16 h-16 flex items-center justify-center mb-4">
              <img src="/billeder/community.svg" alt="Community" class="w-7 h-7 object-contain" />
            </div>
            <h4 class="body-text font-medium mb-2">Community</h4>
            <p class="body-text text-sm text-gray-600 max-w-xs">
              Peer stories and gentle conversation that connect people.
            </p>
          </div>

          <div class="flex flex-col items-center text-center">
            <div class="bg-[var(--color-beige)] rounded-full w-16 h-16 flex items-center justify-center mb-4">
              <img src="/billeder/shop.png" alt="Organic shop" class="w-7 h-7 object-contain" />
            </div>
            <h4 class="body-text font-medium mb-2">Organic shop</h4>
            <p class="body-text text-sm text-gray-600 max-w-xs">
              A small, considered selection of sustainable essentials.
            </p>
          </div>

        </div>
      </div>
    </section>

    <!-- Genbrugelig tekst/billede-sektion -->
    <TwoColSection
      title="Organic Thinking"
      paragraphs={[
        `Organic thinking approaches mental health by shaping supportive conditions rather than pushing for immediate change.`,
        `At its core is the idea that thoughts, feelings and actions are deeply connected.`,
        `In everyday practice, this means cultivating self-awareness through simple, repeatable actions.`,
      ]}
      image="/billeder/tree.png"
      imageAlt="Tree image"
      imagePosition="right"
      ctaText="Read"
      ctaHref="/om-os"
    />

    <div class="relative z-20">
      <ShopSection />
      <CardsSection />
    </div>

    <!-- Samme komponent, men med omvendt layout -->
    <TwoColSection
      title="Read & Share"
      paragraphs={[
        `This section collects concise, honest stories and practical tips from people using organic methods in daily life.`,
      ]}
      image="/billeder/girl.png"
      imageAlt="Read & share image"
      imagePosition="left"
      showImageMobile={true}
      ctaText="Read"
      ctaHref="/read"
    />

    <!-- Galleri med forskellig visning pr. breakpoint -->
    <section class="w-full border-[0.5px] border-[var(--color-dark-grey)] bg-white">
      <div class="mx-auto w-full px-0">

        <div class="md:hidden -mx-6 flex overflow-x-auto px-6 snap-x snap-mandatory">
          <div class="snap-center flex-shrink-0 w-[320px]"><img src="/billeder/grandma.png" alt="Gallery image 1" /></div>
          <div class="snap-center flex-shrink-0 w-[320px]"><img src="/billeder/girlhood.png" alt="Gallery image 2" /></div>
          <div class="snap-center flex-shrink-0 w-[320px]"><img src="/billeder/swim.png" alt="Gallery image 3" /></div>
          <div class="snap-center flex-shrink-0 w-[320px]"><img src="/billeder/lovers.png" alt="Gallery image 4" /></div>
        </div>

        <div class="hidden md:grid grid-cols-4">
          <img src="/billeder/grandma.png" alt="Gallery image 1" />
          <img src="/billeder/girlhood.png" alt="Gallery image 2" />
          <img src="/billeder/swim.png" alt="Gallery image 3" />
          <img src="/billeder/lovers.png" alt="Gallery image 4" />
        </div>

      </div>
    </section>

    <!-- Statisk disclaimer uden interaktion -->
    <section class="w-full bg-white border-y-[0.5px] border-[var(--color-dark-grey)]">
      <div class="mx-auto max-w-5xl h-[200px] flex items-center justify-center px-6">
        <p class="body-text text-center text-sm text-gray-600">
          *These statements are not intended to diagnose, treat, cure or prevent any disease.
        </p>
      </div>
    </section>

  </div>
</MainLayout>
