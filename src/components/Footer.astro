---
/* Button genbruges for konsistent CTA-adfærd */
import Button from "../components/Button.astro";
---
<footer class="border border-[var(--color-dark-grey)]">
  <div class="container mx-auto px-6 py-6">

    <!-- Grid med tre kolonner bruges for at kunne centrere subscribe-blokken -->
    <div class="grid grid-cols-1 md:grid-cols-3 items-center gap-8">

      <!-- Venstre kolonne: simple links uden ekstra funktionalitet -->
      <div class="pt-2 flex justify-center md:justify-start">
        <ul class="flex flex-row gap-8">
          <li class="body-text hover:underline">Pinterest</li>
          <li class="body-text hover:underline">Instagram</li>
          <li class="body-text hover:underline">Spotify</li>
        </ul>
      </div>

      <!-- Midterkolonne: primær handling i footeren -->
      <div class="flex flex-col items-center justify-center">
        <h3 class="text-xl md:text-2xl mb-6 text-center">
          Join the ORGANIC community to start your journey.
        </h3>

        <div class="w-full max-w-xl text-center">

          <!-- CTA linker til subscribe-flow -->
          <div class="flex justify-center">
            <Button text="Subscribe" href="/subscribe" />
          </div>

          <!-- Juridisk tekst placeret tæt på handlingen -->
          <p class="body-text text-sm mt-4">
            By subscribing you agree to organic's storage and handling of your data.
            For more information, visit our
            <a href="#" class="underline">Privacy Policy</a>.
          </p>

        </div>
      </div>

      <!-- Tom kolonne bruges bevidst for at holde midterindhold centreret -->
      <div class="hidden md:block" />
    </div>

  </div>
</footer>
