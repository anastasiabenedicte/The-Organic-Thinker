---
/* Layout samler header, footer og sideindhold ét sted */
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/tailwind.css";

const { title } = Astro.props;
---

<html lang="da">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />

    <link rel="icon" type="image/png" href="/billeder/logo.png" />
    <meta name="generator" content={Astro.generator} />

    <!-- Titel sættes pr. side via props -->
    <title>{title}</title>

    <!-- Bruges af tailwindcss-intersect til viewport-baserede effekter -->
    <script
      defer
      src="https://unpkg.com/tailwindcss-intersect@2.x.x/dist/observer.min.js">
    </script>
  </head>

  <body class="flex flex-col min-h-screen m-0 p-0">
    <Header />

    <!-- flex-1 sikrer footer i bunden ved korte sider -->
    <main class="flex-1">
      <slot />
    </main>

    <Footer />
  </body>
</html>
